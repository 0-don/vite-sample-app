{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "target": "es2015",
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist/*", "types"]
}
